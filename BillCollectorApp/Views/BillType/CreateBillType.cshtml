@section Scripts {
    <script>
        $(document).ready(function(){
            LoadData();
            $('#tbl').DataTable();
        })

        function Save() {
            var frm = $('#frm').serialize();

            Swal.fire({
                title: 'Are you sure?',
                text: "Do you want to submit the data?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, submit it!',
                cancelButtonText: 'No, cancel!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/api/CreateBillType',
                        type: 'POST',
                        data: frm,
                        success: function (response) {
                            Swal.fire(
                                'Submitted!',
                                'Your data has been submitted.',
                                'success'
                            );
                        },
                        error: function (xhr, status, error) {
                            Swal.fire(
                                'Error!',
                                'There was an error submitting your data.',
                                'error'
                            );
                        }
                    });
                }
            });
        }


        function LoadData() {
            $.ajax({
                url: '/api/GetBillTypes',
                type: 'GET',
                success: function (response) {
                    console.log(response);
                    var option = '';

                    $.each(response, function (i, item) {
                        var status = item.status == 1 ? "Active" : "Inactive";


                        option += `<tr class="product-removes">
                                        <td>
                                            <p class="f-light">${item.code}</p>
                                        </td>
                                        <td>
                                            <p class="f-light">${item.name}</p>
                                        </td>
                                                <td> <span class="badge badge-light-secondary">${status}</span></td>
                                        <td>
                                                <a class="btn btn-warning btn-sm" onclick="Edit(${item.id})"><i class="fa fa-pencil"></i></a>
                                                <a class="btn btn-danger btn-sm" onclick="Delete(${item.id})"><i class="fa fa-trash-o"></i></a>
                                        </td>
                                    </tr>`
                    })

                    $('#tbl tbody').empty();
                    $('#tbl tbody').append(option);
                },
                error: function (xhr, status, error) {
                    $('#result').html(`
                                            <p>Error: ${error}</p>
                                        `);
                }
            });
        }
    </script>
}



