@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tbl').DataTable();
        })

        function Process() {
            var frm = $('#frm').serialize();

            Swal.fire({
                title: 'Are you sure?',
                text: "Do you want to process the data?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, process!',
                cancelButtonText: 'No, cancel!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/api/ProcessBill',
                        type: 'POST',
                        data: frm,
                        success: function (response) {
                            Swal.fire(
                                'Processed!',
                                'Your data has been processed.',
                                'success'
                            );
                            Load();
                        },
                        error: function (xhr, status, error) {
                            Swal.fire(
                                'Error!',
                                'There was an error processing your data.',
                                'error'
                            );
                        }
                    });
                }
            });
        }




        function Load() {
            var typeId = $('#billTypeId :selected').val();
            var year = $('#year :selected').val();
            var month = $('#month :selected').val();


            if (typeId > 0 && year > 0 && month != "") {
                $.ajax({
                    url: '/api/GetBills?billTypeId=' + typeId + '&year=' + year + '&month=' + month,
                    type: 'GET',
                    success: function (response) {
                        console.log('Data loaded successfully:', response);
                        var option = '';

                        $.each(response, function (i, item) {
                            option += `<tr class="product-removes">
                                                                    <td>
                                                                        <p class="f-light">${item.customer?.code}-${item.customer?.name}</p>
                                                                        <p class="f-light">${item.customer?.phone}</p>
                                                                    </td>
                                                                    <td>
                                                                        <p class="f-light">${formatDate(item.generateDate)}</p>
                                                                    </td>
                                                                    <td>
                                                                        <p class="f-light">${formatDate(item.dueDate)} </p>
                                                                    </td>
                                                                    <td>
                                                                        <input class="form-control" style="text-align: right;" id="bill_${item.id}" value="${item.bill}" />
                                                                    </td>
                                                                    <td>
                                                                        <p class="f-light">${item.status == 1 ? 'Paid' : 'Pending'}</p>
                                                                    </td>
                                                                    <td>
                                                                        <a class="btn btn-warning btn-sm" onclick="Update(${item.id})"><i class="fa fa-pencil"></i></a>
                                                                        <a class="btn btn-danger btn-sm" onclick="Remove(${item.id})"><i class="fa fa-trash"></i></a>
                                                                    </td>
                                                                </tr>`
                        })

                        $('#tbl tbody').empty();
                        $('#tbl tbody').append(option);
                    },
                    error: function (xhr, status, error) {
                        console.error('Error loading data:', error);
                    }
                });
            }
        }


        function formatDate(dateString) {
            var date = new Date(dateString);

            var months = ["Jan", "Feb", "Mar", "Apr", "May", "Jun",
                "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];

            var day = ('0' + date.getDate()).slice(-2); // Adding leading zero
            var month = months[date.getMonth()];
            var year = date.getFullYear();

            var formattedDate = day + " " + month + " " + year;

            return formattedDate;
        }


        function Update(id) {
            var bill = $('#bill_' + id).val();

            $.ajax({
                url: '/api/UpdateBill?id=' + id + '&bill=' + bill,
                type: 'GET',
                success: function (response) {
                    console.log('Data loaded successfully:', response);
                    Swal.fire(
                        'Updated!',
                        'Successfully Updated.',
                        'success'
                    );
                    Load();
                },
                error: function (xhr, status, error) {
                    console.error('Error loading data:', error);
                }
            });
        }

        function Remove(id) {
            $.ajax({
                url: '/api/RemoveBill?id=' + id,
                type: 'GET',
                success: function (response) {
                    console.log('Data loaded successfully:', response);
                    Swal.fire(
                        'Removed!',
                        'Successfully Removed.',
                        'success'
                    );
                    Load();
                },
                error: function (xhr, status, error) {
                    console.error('Error loading data:', error);
                }
            });
        }

    </script>
}
